@model DangKyHocPhan1.Models.SinhVien

@{
    ViewBag.Title = "Chi tiết sinh viên";
}

<h2>Chi tiết sinh viên</h2>

<div>
    <h4>Sinh viên</h4>
    <hr />
    <dl class="dl-horizontal">
         <dt>
            Mã SV
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSV)
        </dd>
        <dt>
            Họ Tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Giới Tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            Ngày Sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
         <dt>
            Hình
        </dt>

         <dd>
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                    <img src="@Model.Hinh" alt="Student Image" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                    <span>Không có hình</span>
            }
        </dd>
         <dt>
            Ngành Học
        </dt>
         <dd>
            @Html.DisplayFor(model => model.NganhHoc.TenNganh)
        </dd>

    </dl>
</div>
<p>
     <a asp-action="Edit" asp-route-id="@Model.MaSV">Edit</a> |
    <a asp-action="Index">Trở lại danh sách</a>
</p>