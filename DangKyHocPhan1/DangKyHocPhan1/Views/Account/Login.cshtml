@{
    ViewBag.Title = "Đăng nhập";
}

    <h2>Đăng nhập</h2>

@using (Html.BeginForm("DangNhap", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Đăng nhập</h4>
                <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
            @Html.Label("MaSV", "Mã sinh viên", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                @Html.TextBox("MaSV", null, new { @class = "form-control" })
                @Html.ValidationMessage("MaSV", "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Đăng nhập" class="btn btn-default" />
                    </div>
                </div>
            </div>
}